# TON AI Agent - Environment Configuration
# Copy this file to .env and update with your settings
# NEVER commit .env to version control

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_SECRET=CHANGE_THIS_TO_A_RANDOM_STRING_32_CHARS
APP_TIMEZONE=UTC

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=tonaiagent
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_PREFIX=taa_

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_WEBHOOK_SECRET=random_webhook_secret
TELEGRAM_MINI_APP_URL=https://your-domain.com/app

# TON Blockchain
TON_NETWORK=mainnet
TON_RPC_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key

# AI Providers (at least one required)
# Groq - Primary (fastest, recommended)
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-70b-versatile

# OpenAI - Fallback
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic - Fallback
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Cache (optional)
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
