{
  "name": "@tonaiagent/core",
  "version": "0.1.0",
  "description": "Multi-provider AI layer for autonomous agents on TON blockchain",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ai": {
      "import": "./dist/ai/index.mjs",
      "require": "./dist/ai/index.js",
      "types": "./dist/ai/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/ai/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/ai/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "llm",
    "groq",
    "openai",
    "anthropic",
    "google",
    "xai",
    "openrouter",
    "multi-provider",
    "ton",
    "blockchain",
    "autonomous-agents"
  ],
  "author": "TONAIAgent Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xlabtg/TONAIAgent.git"
  },
  "bugs": {
    "url": "https://github.com/xlabtg/TONAIAgent/issues"
  },
  "homepage": "https://github.com/xlabtg/TONAIAgent#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
