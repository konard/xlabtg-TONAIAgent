# TON AI Agent - Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# Application Settings
# ===========================================
APP_NAME="TON AI Agent"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_KEY=  # Generate with: php -r "echo bin2hex(random_bytes(32));"
APP_TIMEZONE=UTC

# ===========================================
# Database Configuration
# ===========================================
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=tonaiagent
DB_USERNAME=tonai_user
DB_PASSWORD=your_secure_password_here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=tonai_

# ===========================================
# Telegram Bot Configuration
# ===========================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=TONAIAgentBot
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_MINI_APP_URL=https://your-domain.com/app
TELEGRAM_ENABLE_AUTH=true

# ===========================================
# TON Blockchain Configuration
# ===========================================
TON_RPC_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key_here
TON_NETWORK=mainnet
TON_WALLET_VERSION=v4r2

# ===========================================
# AI Provider Configuration
# ===========================================
AI_DEFAULT_PROVIDER=groq

# Groq (Primary - fastest)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_MAX_TOKENS=4096

# OpenAI (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic (Fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096

# ===========================================
# Email Configuration
# ===========================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="TON AI Agent"
ADMIN_EMAIL=admin@your-domain.com

# ===========================================
# Security Configuration
# ===========================================
CSRF_ENABLED=true
CSRF_TOKEN_LIFETIME=3600

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

SESSION_LIFETIME=1440
SESSION_SECURE=true
SESSION_HTTPONLY=true

HONEYPOT_FIELD=website

# reCAPTCHA (Optional)
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# ===========================================
# Logging Configuration
# ===========================================
LOG_ENABLED=true
LOG_LEVEL=info
LOG_CHANNEL=file
LOG_MAX_FILES=14

# ===========================================
# Analytics (Optional)
# ===========================================
GOOGLE_ANALYTICS_ID=
POSTHOG_ENABLED=false
POSTHOG_KEY=

# ===========================================
# Revenue Configuration
# ===========================================
PERFORMANCE_FEE_PERCENT=15
PLATFORM_SHARE=30
CREATOR_SHARE=70
MIN_PAYOUT_THRESHOLD=100

# ===========================================
# Localization
# ===========================================
DEFAULT_LOCALE=en
